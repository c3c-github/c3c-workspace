        }



        @keyframes fadeIn {

            from { opacity: 0; }

            to { opacity: 1; }

        }



        @keyframes slideUp {

            from { transform: translateY(20px); opacity: 0; }

            to { transform: translateY(0); opacity: 1; }

        }



        /* Loader com as cores da C3C */

        .loader {

            border: 3px solid #f3f3f3;

            border-radius: 50%;

            border-top: 3px solid #2978FF; /* Azul C3C */

            border-right: 3px solid #1DDDBD; /* Turquesa C3C */

            width: 20px;

            height: 20px;

            -webkit-animation: spin 1s linear infinite;

            animation: spin 1s linear infinite;

        }



        @keyframes spin {

            0% { transform: rotate(0deg); }

            100% { transform: rotate(360deg); }

        }



        /* Gradiente Exclusivo C3C */

