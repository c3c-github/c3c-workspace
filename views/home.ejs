    </style>
</head>
<body class="h-screen flex overflow-hidden bg-[#F8FAFC]">

    <div id="mobile-overlay" onclick="toggleMenu()" class="fixed inset-0 bg-black/50 z-30 hidden md:hidden transition-opacity opacity-0"></div>

    <%- include('partials/sidebar') %>

    <main class="flex-1 flex flex-col md:ml-64 relative w-full transition-all duration-300">
        
        <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 md:px-8 sticky top-0 z-20">
            <div class="flex items-center gap-4">
                <button onclick="toggleMenu()" class="md:hidden p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                    <i data-lucide="menu" class="w-6 h-6"></i>
                </button>
                <h1 class="text-lg md:text-xl font-bold text-gray-800">
                    Bom dia, <%= user.nome.split(' ')[0] %>! üëã
                </h1>
            </div>
            
            <div class="flex items-center bg-white rounded-lg shadow-sm border border-gray-200 p-1">
                <span class="px-3 text-xs font-bold text-gray-400 uppercase hidden sm:block">Per√≠odo:</span>
                <select id="period-selector" onchange="triggerDataLoad(this.value)" class="text-sm font-semibold text-gray-800 bg-transparent outline-none cursor-pointer py-1 pr-2">
                    <option>Carregando...</option>
                </select>
            </div>
        </header>

        <div class="flex-1 overflow-y-auto p-4 md:p-8 fade-in">
            
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-8">
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 flex flex-col justify-between h-32 relative overflow-hidden">
                     <div class="absolute right-0 top-0 w-16 h-16 bg-blue-50 rounded-bl-full -mr-2 -mt-2"></div>
                     <p class="text-gray-400 text-xs font-bold uppercase tracking-wider z-10">Horas Alocadas</p>
                     <div class="flex items-end gap-1 z-10">
                         <span id="kpi-alocadas" class="text-3xl font-extrabold text-gray-800">--</span>
                         <span class="text-xs text-gray-400 font-medium mb-1.5">h</span>
                     </div>
                     <p class="text-[10px] text-gray-400 mt-1">Previsto na aloca√ß√£o</p>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 flex flex-col justify-between h-32 relative overflow-hidden">
                    <div class="absolute right-0 top-0 w-16 h-16 bg-purple-50 rounded-bl-full -mr-2 -mt-2"></div>
                    <p class="text-gray-400 text-xs font-bold uppercase tracking-wider z-10">Horas Lan√ßadas</p>
                    <div class="flex items-end gap-1 z-10">
                        <span id="kpi-lancadas" class="text-3xl font-extrabold text-gray-800">--</span>
                        <span class="text-xs text-gray-400 font-medium mb-1.5">h</span>
                    </div>
                    <p class="text-[10px] text-gray-400 mt-1">Realizado pela equipe</p>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 flex flex-col justify-between h-32 relative overflow-hidden">
                    <div class="absolute right-0 top-0 w-16 h-16 bg-teal-50 rounded-bl-full -mr-2 -mt-2"></div>
                    <p class="text-gray-400 text-xs font-bold uppercase tracking-wider z-10">Efici√™ncia</p>
                    <div class="flex items-end gap-1 z-10">
                        <span id="kpi-eficiencia" class="text-3xl font-extrabold text-[#1DDDBD]">--</span>
                        <span class="text-xs text-gray-400 font-medium mb-1.5">%</span>
                    </div>
                    <p class="text-[10px] text-gray-400 mt-1">Aprovado / Alocado</p>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-sm border border-red-50 flex flex-col justify-between h-32 relative overflow-hidden">
                    <div class="absolute right-0 top-0 w-16 h-16 bg-red-50 rounded-bl-full -mr-2 -mt-2"></div>
                    <p class="text-red-400 text-xs font-bold uppercase tracking-wider z-10">Pendentes</p>
                    <div class="flex items-end gap-1 z-10">
                        <span id="kpi-pendentes" class="text-3xl font-extrabold text-red-600">--</span>
                        <span class="text-xs text-red-400 font-medium mb-1.5">h</span>
                    </div>
                    <p class="text-[10px] text-red-400 font-bold mt-1">Necessita Aprova√ß√£o</p>
                </div>
            </div>

            <div class="bg-gradient-to-r from-[#2978FF] to-[#1DDDBD] rounded-2xl p-8 text-white flex items-center justify-between shadow-lg">
                <div>
                    <h3 class="text-xl font-bold mb-2">Aprova√ß√µes Pendentes</h3>
                    <p class="text-blue-50 text-sm max-w-md">Voc√™ tem per√≠odos em aberto que impedem o faturamento.</p>
                    <a href="/approvals" class="inline-block mt-6 bg-white text-blue-600 text-sm font-bold px-5 py-2.5 rounded-lg hover:bg-blue-50 transition-colors shadow-md">
                        Ir para Aprova√ß√µes
                    </a>
                </div>
                <div class="hidden md:block opacity-90">
                    <i data-lucide="clock" class="w-24 h-24 text-white opacity-50"></i>
                </div>
            </div>

        </div>
    </main>

    <script>
        lucide.createIcons();
        const API_URL = '/api';

        // --- MENU MOBILE ---
        function toggleMenu() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobile-overlay');
            const body = document.body;
            
            if (sidebar.classList.contains('-translate-x-full')) {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
                setTimeout(() => overlay.classList.remove('opacity-0'), 10);
                if(window.innerWidth < 768) body.style.overflow = 'hidden';
            } else {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('opacity-0');
                setTimeout(() => overlay.classList.add('hidden'), 300);
                body.style.overflow = '';
            }
        }

        // --- DADOS ---
        document.addEventListener('DOMContentLoaded', () => { loadPeriods(); });

        async function loadPeriods() {
            try {
                const res = await fetch(`${API_URL}/periods`);
                if(res.status === 401) window.location.href = '/';
                const periods = await res.json();
                const sel = document.getElementById('period-selector');
                sel.innerHTML = '';
                
                if(periods.length === 0) { sel.innerHTML = '<option>Sem contratos</option>'; return; }
                
                periods.forEach((p, idx) => {
                    const opt = document.createElement('option');
                    opt.value = JSON.stringify({ start: p.DataInicio__c, end: p.DataFim__c });
                    opt.text = p.Name;
                    if(idx === 0) opt.selected = true;
                    sel.appendChild(opt);
                });
                if (sel.options.length > 0) triggerDataLoad(sel.value);
            } catch (err) { console.error(err); }
        }

        function triggerDataLoad(jsonDates) {
            if(!jsonDates) return;
            const dates = JSON.parse(jsonDates);
            loadDashboardKPIs(dates.start, dates.end);
        }

        async function loadDashboardKPIs(start, end) {
            const ids = ['kpi-alocadas', 'kpi-lancadas', 'kpi-eficiencia', 'kpi-pendentes'];
            const els = ids.map(id => document.getElementById(id));
            els.forEach(el => el.style.opacity = '0.5');

            try {
                const res = await fetch(`${API_URL}/dashboard/metrics?inicio=${start}&fim=${end}`);
                if (res.ok) {
                    const data = await res.json();
                    els[0].innerText = data.totalAlocadas.toFixed(0);
                    els[1].innerText = data.totalLancadas.toFixed(1);
                    els[2].innerText = data.eficiencia;
                    els[3].innerText = data.totalPendentes.toFixed(1);

                    const elEfic = els[2];
                    if(data.eficiencia > 100) elEfic.className = "text-3xl font-extrabold text-red-500";
                    else if(data.eficiencia >= 95) elEfic.className = "text-3xl font-extrabold text-[#1DDDBD]";
                    else elEfic.className = "text-3xl font-extrabold text-yellow-500";
                } else {
                    els.forEach(el => el.innerText = "-");
                }
            } catch (err) { console.error(err); } 
            finally { els.forEach(el => el.style.opacity = '1'); }
        }
    </script>
</body>
</html>