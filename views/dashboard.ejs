    <script>
        lucide.createIcons();
        const API_URL = '/api';

        // --- FUN√á√ÉO DE NAVEGA√á√ÉO (SPA) ---
        function navigate(viewName) {
            // 1. Atualiza Menu Lateral
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            const activeNav = document.getElementById(`nav-${viewName}`);
            if(activeNav) activeNav.classList.add('active');

            // 2. Esconde todas as Views
            document.getElementById('view-home').classList.add('hidden');
            document.getElementById('view-approval').classList.add('hidden');

            // 3. Mostra View Alvo
            const view = document.getElementById(`view-${viewName}`);
            if(view) {
                view.classList.remove('hidden');
                // Reinicia anima√ß√£o
                view.classList.remove('fade-in');
                void view.offsetWidth; 
                view.classList.add('fade-in');
            }
        }

        // --- INICIALIZA√á√ÉO E DATAS ---
        document.addEventListener('DOMContentLoaded', () => {
            loadPeriods();
        });

        async function loadPeriods() {
            try {
                const res = await fetch(`${API_URL}/periods`);
                if(res.status === 401) window.location.href = '/';
                
                const periods = await res.json();
                
                const selectors = [
                    document.getElementById('period-selector-home'),
                    document.getElementById('period-selector-approval')
                ];

                selectors.forEach(sel => {
                    sel.innerHTML = '';
                    if(periods.length === 0) {
                        sel.innerHTML = '<option>Sem contratos</option>';
                        return;
                    }
                    periods.forEach((p, idx) => {
                        const opt = document.createElement('option');
                        opt.value = JSON.stringify({ start: p.DataInicio__c, end: p.DataFim__c });
                        opt.text = p.Name;
                        if(idx === 0) opt.selected = true;
                        sel.appendChild(opt);
                    });
                });

                if (selectors[0].options.length > 0) {
                    triggerDataLoad(selectors[0].value);
                }

            } catch (err) { console.error(err); }
        }

        function onPeriodChange(changedElement) {
            const val = changedElement.value;
            // Sincroniza selects
            const homeSel = document.getElementById('period-selector-home');
            const appSel = document.getElementById('period-selector-approval');

            if (changedElement === homeSel) appSel.value = val;
            else homeSel.value = val;

            triggerDataLoad(val);
        }

        function triggerDataLoad(jsonDates) {
            if(!jsonDates) return;
            const dates = JSON.parse(jsonDates);
            loadDashboardKPIs(dates.start, dates.end);
            loadProjects(dates.start, dates.end);
        }

        // --- CARGA DE KPIS (4 CARDS) ---
        async function loadDashboardKPIs(start, end) {
            const ids = ['kpi-alocadas', 'kpi-lancadas', 'kpi-eficiencia', 'kpi-pendentes'];
            const els = ids.map(id => document.getElementById(id));
            els.forEach(el => el.style.opacity = '0.5');

            try {
                const res = await fetch(`${API_URL}/dashboard/metrics?inicio=${start}&fim=${end}`);
                if (res.ok) {
                    const data = await res.json();
                    
                    els[0].innerText = data.totalAlocadas.toFixed(0);
                    els[1].innerText = data.totalLancadas.toFixed(1);
                    els[2].innerText = data.eficiencia;
                    els[3].innerText = data.totalPendentes.toFixed(1);

                    // Cor Efici√™ncia
                    const elEfic = els[2];
                    if(data.eficiencia > 100) elEfic.className = "text-3xl font-extrabold text-red-500";
                    else if(data.eficiencia >= 95) elEfic.className = "text-3xl font-extrabold text-[#1DDDBD]";
                    else elEfic.className = "text-3xl font-extrabold text-yellow-500";

                } else {
                    els.forEach(el => el.innerText = "-");
                }
            } catch (err) { console.error(err); } 
            finally { els.forEach(el => el.style.opacity = '1'); }
        }

        // --- CARGA DE PROJETOS (GRID) ---
        async function loadProjects(start, end) {
            const container = document.getElementById('approval-cards-container');
            container.innerHTML = '<p class="text-gray-400 col-span-2 text-center py-10">Carregando projetos...</p>';

            try {
                const res = await fetch(`${API_URL}/approvals/projects?inicio=${start}&fim=${end}`);
                const projects = await res.json();
                
                container.innerHTML = '';

                if(projects.length === 0) {
                    container.innerHTML = '<p class="text-gray-400 col-span-2 text-center py-10">Nenhum projeto encontrado.</p>';
                    return;
                }

                projects.forEach(item => {
                    const isOpen = item.statusUI === 'Aberto';
                    
                    // Defini√ß√£o de Cores da Conformidade
                    let percentClass = 'text-green-600';
                    let barColor = 'bg-green-500';
                    if(item.percentual > 105) { percentClass = 'text-red-600'; barColor = 'bg-red-500'; }
                    else if(item.percentual < 95) { percentClass = 'text-yellow-600'; barColor = 'bg-yellow-500'; }

                    const badge = isOpen 
                        ? '<span class="bg-[#FFF9C4] text-[#FBC02D] text-[10px] font-bold px-2 py-0.5 rounded">Aberto</span>'
                        : '<span class="bg-green-100 text-green-700 text-[10px] font-bold px-2 py-0.5 rounded">Ok</span>';

                    const card = `
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 flex flex-col h-full hover:shadow-md transition-shadow">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <span class="text-[10px] font-bold text-gray-400 uppercase tracking-wider block mb-0.5 truncate w-40" title="${item.client}">${item.client}</span>
                                <h3 class="text-lg font-bold text-gray-900 leading-tight truncate w-64" title="${item.serviceName}">${item.serviceName}</h3>
                            </div>
                            ${badge}
                        </div>
                        
                        <div class="grid grid-cols-4 gap-2 mb-5 bg-gray-50 rounded-lg p-3 border border-gray-100">
                            
                            <div class="text-center border-r border-gray-200 last:border-0">
                                <p class="text-[10px] text-gray-400 font-bold uppercase">Aloca√ß√£o</p>
                                <p class="text-sm font-bold text-gray-800">${item.metrics.alocado.toFixed(0)}h</p>
                            </div>

                            <div class="text-center border-r border-gray-200 last:border-0">
                                <p class="text-[10px] text-gray-400 font-bold uppercase">Total</p>
                                <p class="text-sm font-bold text-blue-600">${item.metrics.ponderado.toFixed(0)}h</p>
                            </div>

                            <div class="text-center border-r border-gray-200 last:border-0">
                                <p class="text-[10px] text-gray-400 font-bold uppercase">Extra</p>
                                <p class="text-sm font-bold ${item.metrics.extra > 0 ? 'text-red-500' : 'text-gray-400'}">
                                    ${item.metrics.extra.toFixed(0)}h
                                </p>
                            </div>

                            <div class="text-center relative">
                                <p class="text-[10px] text-gray-400 font-bold uppercase">Conf.</p>
                                <p class="text-sm font-bold ${percentClass}">${item.percentual}%</p>
                                <div class="absolute bottom-0 left-2 right-2 h-0.5 bg-gray-200 rounded-full overflow-hidden mt-1">
                                    <div class="h-full ${barColor}" style="width: ${Math.min(item.percentual, 100)}%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-auto flex items-center justify-between pt-2">
                            <span class="text-xs text-gray-400 font-medium flex items-center gap-1">
                                <i data-lucide="users" class="w-3 h-3"></i> ${item.teamSize} Recurso(s)
                            </span>
                            <button onclick="openModal('${item.serviceId}', '${item.serviceName}')" class="px-4 py-1.5 bg-white border border-blue-200 text-blue-600 font-bold rounded-lg text-xs hover:bg-blue-50 transition-colors">
                                Analisar
                            </button>
                        </div>
                    </div>`;
                    container.innerHTML += card;
                });
                
                lucide.createIcons();

            } catch (err) { container.innerHTML = '<p class="text-red-500">Erro ao carregar dados.</p>'; }
        }
        // --- L√ìGICA DO MODAL ---
        
        async function openModal(serviceId, serviceName) {
            const modal = document.getElementById('modal-approval');
            const title = document.getElementById('modal-title');
            const tbody = document.getElementById('modal-table-body');
            
            // Elementos dos Cards de Topo
            const cardAlocado = document.getElementById('modal-sum-alocado');
            const cardPonderado = document.getElementById('modal-sum-ponderado');
            const cardExtra = document.getElementById('modal-sum-extra');
            const cardConf = document.getElementById('modal-sum-conformidade');
            const barConf = document.getElementById('modal-bar-conformidade');

            title.innerText = serviceName;
            tbody.innerHTML = '<tr><td colspan="7" class="text-center py-8">Carregando detalhes...</td></tr>';
            
            // Reseta cards
            [cardAlocado, cardPonderado, cardExtra, cardConf].forEach(el => el.innerText = '...');
            
            modal.classList.remove('hidden');

            const selector = document.getElementById('period-selector-approval');
            const dates = JSON.parse(selector.value);

            try {
                // --- MUDAN√áA 1: Adicionado &t=... para evitar cache e mostrar status atualizado ---
                const timestamp = new Date().getTime();
                const url = `${API_URL}/approvals/${serviceId}/resources?inicio=${dates.start}&fim=${dates.end}&t=${timestamp}`;
                
                const res = await fetch(url);
                let resources = await res.json();

                tbody.innerHTML = '';

                if (resources.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center py-8">Nenhum recurso encontrado.</td></tr>';
                    [cardAlocado, cardPonderado, cardExtra, cardConf].forEach(el => el.innerText = '-');
                    return;
                }

                // Ordena√ß√£o
                resources.sort((a, b) => b.totalPonderado - a.totalPonderado);

                // Vari√°veis Totais
                let sumAlocado = 0;
                let sumExtra = 0;
                let sumPonderado = 0;

                resources.forEach(r => {
                    sumAlocado += r.alocado;
                    sumExtra += r.horasExtras;
                    sumPonderado += r.totalPonderado;

                    let badgeClass = '';
                    if (r.statusClass === 'danger') badgeClass = 'bg-red-100 text-red-700';
                    else if (r.statusClass === 'warning') badgeClass = 'bg-yellow-100 text-yellow-700';
                    else badgeClass = 'bg-green-100 text-green-700';

                    // --- MUDAN√áA 2: L√≥gica de Status Corrigida ---
                    const totalLancado = r.horasNormais + r.horasExtras;
                    let actionHtml = '';

                    // CASO 1: Zerado (Sem pend√™ncias)
                    if (totalLancado === 0) {
                        actionHtml = '<span class="text-xs text-gray-400 font-medium italic">Sem pend√™ncias</span>';
                    } 
                    // CASO 2: Tem Pend√™ncias (Bot√µes aparecem)
                    else if (r.countPending > 0) {
                        actionHtml = `
                        <div class="flex items-center justify-center gap-3">
                            <a href="#" onclick="openActivityModal('${serviceId}', '${r.id}')" class="text-xs text-blue-600 font-bold hover:text-blue-800 hover:underline transition-colors" title="Ver extrato">
                                Ver Detalhes
                            </a>
                            <button onclick="approveAction('${serviceId}', '${r.id}', 'reject')" class="px-3 py-1.5 text-xs font-bold text-red-600 bg-white border border-red-200 rounded hover:bg-red-50 transition-colors">
                                Reprovar
                            </button>
                            <button onclick="approveAction('${serviceId}', '${r.id}', 'approve')" class="px-3 py-1.5 text-xs font-bold text-white bg-green-500 rounded hover:bg-green-600 shadow-sm transition-colors">
                                Aprovar
                            </button>
                        </div>`;
                    } 
                    // CASO 3: Sem pend√™ncias, mas tem Reprovados (Prioridade visual de alerta)
                    else if (r.countRejected > 0) {
                        actionHtml = `
                        <div class="flex items-center justify-center gap-3">
                             <a href="#" onclick="openActivityModal('${serviceId}', '${r.id}')" class="text-xs text-gray-400 hover:text-blue-600">Ver Detalhes</a>
                             <span class="text-xs text-red-600 font-bold flex items-center gap-1 bg-red-50 px-2 py-1 rounded border border-red-100">
                                <i data-lucide="x-circle" class="w-4 h-4"></i> Reprovado
                             </span>
                        </div>`;
                    }
                    // CASO 4: Tudo Aprovado (Status Verde)
                    else {
                        actionHtml = `
                        <div class="flex items-center justify-center gap-3">
                             <a href="#" onclick="openActivityModal('${serviceId}', '${r.id}')" class="text-xs text-gray-400 hover:text-blue-600">Ver Detalhes</a>
                             <span class="text-xs text-green-600 font-bold flex items-center gap-1 bg-green-50 px-2 py-1 rounded border border-green-100">
                                <i data-lucide="check-circle-2" class="w-4 h-4"></i> Aprovado
                             </span>
                        </div>`;
                    }

                    const row = `
                    <tr class="border-b border-gray-50 hover:bg-gray-50 transition-colors">
                        <td class="py-4 pl-6 font-bold text-gray-900">${r.name}</td>
                        <td class="py-4 text-right text-gray-500">${r.alocado.toFixed(0)}h</td>
                        <td class="py-4 text-right text-gray-800">${r.horasNormais.toFixed(1)}h</td>
                        <td class="py-4 text-right ${r.horasExtras > 0 ? 'text-red-500 font-bold' : 'text-gray-400'}">${r.horasExtras.toFixed(1)}h</td>
                        <td class="py-4 text-right font-bold text-gray-900 bg-gray-50">${r.totalPonderado.toFixed(1)}h</td>
                        <td class="py-4 text-center">
                            <span class="px-3 py-1 rounded-full text-xs font-bold ${badgeClass}">
                                ${r.percentual}%
                            </span>
                        </td>
                        <td class="py-4 text-center px-2">
                            ${actionHtml}
                        </td>
                    </tr>`;
                    tbody.innerHTML += row;
                });

                // --- ATUALIZA CARDS (Sem altera√ß√µes aqui, apenas renderiza√ß√£o) ---
                cardAlocado.innerText = sumAlocado.toFixed(0) + 'h';
                cardPonderado.innerText = sumPonderado.toFixed(1) + 'h';
                cardExtra.innerText = sumExtra.toFixed(1) + 'h';
                cardExtra.className = sumExtra > 0 ? "text-xl font-bold text-red-600" : "text-xl font-bold text-gray-400";

                let percentGeral = 0;
                if(sumAlocado > 0) percentGeral = Math.round((sumPonderado / sumAlocado) * 100);
                else if(sumPonderado > 0) percentGeral = 999; 
                else percentGeral = 100;

                cardConf.innerText = percentGeral + '%';
                
                let colorClass = 'text-green-600';
                let barColor = 'bg-green-500';
                if(percentGeral > 105) { colorClass = 'text-red-600'; barColor = 'bg-red-500'; } 
                else if(percentGeral < 95) { colorClass = 'text-yellow-600'; barColor = 'bg-yellow-500'; }

                cardConf.className = `text-xl font-bold ${colorClass} relative z-10`;
                barConf.className = `absolute bottom-0 left-0 h-1 ${barColor} transition-all`;
                
                setTimeout(() => { barConf.style.width = Math.min(percentGeral, 100) + '%'; }, 100);
                
                // Renderiza √≠cones injetados
                lucide.createIcons();

            } catch (err) {
                console.error(err);
                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-red-500 py-8">Erro ao carregar dados.</td></tr>';
            }
        }
        function closeModal() {
            document.getElementById('modal-approval').classList.add('hidden');
        }

        async function approveAction(serviceId, personId, action) {
            // Feedback Visual imediato
            const confirmed = confirm(`Confirma a a√ß√£o de ${action === 'approve' ? 'APROVAR' : 'REPROVAR'} todas as horas deste recurso neste per√≠odo?`);
            if(!confirmed) return;

            const selector = document.getElementById('period-selector-approval');
            const dates = JSON.parse(selector.value);

            try {
                const res = await fetch(`${API_URL}/approvals/action`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        serviceId: serviceId,
                        personId: personId,
                        action: action,
                        inicio: dates.start,
                        fim: dates.end
                    })
                });

                const result = await res.json();

                if (result.success) {
                    // Recarrega o modal principal para atualizar os status e totais
                    // Usamos um pequeno timeout para dar tempo do SF processar se for muito r√°pido
                    // Mas geralmente update √© s√≠ncrono no retorno da API
                    openModal(serviceId, document.getElementById('modal-title').innerText);
                    
                    // Opcional: Recarregar os cards do fundo tamb√©m
                    loadProjects(dates.start, dates.end);
                } else {
                    alert('Erro: ' + result.message);
                }

            } catch (err) {
                console.error(err);
                alert('Erro de comunica√ß√£o com o servidor.');
            }
        }

        async function openActivityModal(serviceId, personId) {
            const modal = document.getElementById('modal-activities');
            const tbody = document.getElementById('activity-table-body');
            
            tbody.innerHTML = '<tr><td colspan="4" class="text-center p-4">Carregando...</td></tr>';
            modal.classList.remove('hidden');

            const selector = document.getElementById('period-selector-approval');
            const dates = JSON.parse(selector.value);

            try {
                const res = await fetch(`${API_URL}/approvals/${serviceId}/resources/${personId}/activities?inicio=${dates.start}&fim=${dates.end}`);
                const activities = await res.json();

                tbody.innerHTML = '';
                
                if(activities.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" class="text-center p-4 text-gray-400">Nenhuma atividade detalhada.</td></tr>';
                    return;
                }

                activities.forEach(a => {
                    tbody.innerHTML += `
                        <tr class="border-b border-gray-50">
                            <td class="p-4 font-medium">${a.atividade}</td>
                            <td class="p-4 text-right">${a.total.toFixed(1)}h</td>
                            <td class="p-4 text-right ${a.extra > 0 ? 'text-red-500 font-bold' : ''}">${a.extra.toFixed(1)}h</td>
                            <td class="p-4 text-center text-xs">${a.status}</td>
                        </tr>
                    `;
                });

            } catch (err) {
                console.error(err);
                tbody.innerHTML = '<tr><td colspan="4" class="text-center p-4 text-red-500">Erro ao carregar.</td></tr>';
            }
        }

        function closeActivityModal() {
            document.getElementById('modal-activities').classList.add('hidden');
        }

    </script>
