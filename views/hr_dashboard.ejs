    </main>

    <div id="logs-modal" class="fixed inset-0 modal-backdrop z-50 hidden flex items-center justify-center opacity-0 transition-opacity duration-300 p-4">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-3xl transform scale-95 transition-transform duration-300 flex flex-col max-h-[90vh]">
            
            <div class="bg-gray-900 text-white rounded-t-xl shrink-0 flex flex-col">
                
                <div class="p-6 pb-2 flex justify-between items-start">
                    <div>
                        <h3 class="text-xl font-bold" id="modal-name">Nome do Colaborador</h3>
                        <p class="text-gray-400 text-xs mt-0.5 uppercase tracking-wider">Extrato de Horas & Composição</p>
                    </div>
                    <button onclick="closeModal()" class="bg-gray-800 hover:bg-gray-700 p-2 rounded-lg text-gray-300 transition-colors">
                        <i data-lucide="x" class="w-5 h-5"></i>
                    </button>
                </div>

                <div class="px-6 py-4 grid grid-cols-3 gap-4 border-b border-gray-800">
                    <div>
                        <span class="block text-3xl font-bold text-[#1DDDBD]" id="modal-total">--</span>
                        <span class="text-xs text-gray-400 uppercase font-bold tracking-wider">Realizado</span>
                    </div>
                    <div class="border-l border-gray-800 pl-4">
                        <span class="block text-3xl font-bold text-gray-200" id="modal-contract">--</span>
                        <span class="text-xs text-gray-400 uppercase font-bold tracking-wider">Meta Contratual</span>
                    </div>
                    <div class="border-l border-gray-800 pl-4">
                        <span class="block text-3xl font-bold text-gray-500" id="modal-saldo">--</span>
                        <span class="text-xs text-gray-400 uppercase font-bold tracking-wider">Saldo Final</span>
                    </div>
                </div>

                <div class="px-6 py-3 bg-gray-800/50 flex flex-wrap gap-x-6 gap-y-2 text-sm items-center min-h-[40px]" id="modal-composition">
                    <span class="text-gray-500 italic text-xs">Carregando composição...</span>
                </div>
            </div>

            <div id="modal-projects-list" class="hidden"></div>

            <div class="overflow-y-auto flex-1 bg-white">
                <table class="w-full text-sm text-left border-collapse">
                    <thead class="bg-gray-50 text-gray-500 uppercase text-xs font-bold sticky top-0 shadow-sm z-10 border-b border-gray-100">
                        <tr>
                            <th class="px-6 py-3 bg-gray-50">Data</th>
                            <th class="px-6 py-3 bg-gray-50">Atividade / Contexto</th>
                            <th class="px-6 py-3 bg-gray-50">Composição</th>
                            <th class="px-6 py-3 bg-gray-50 text-right">Impacto</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 bg-white" id="modal-logs-body"></tbody>
                </table>
            </div>

            <div class="p-4 border-t border-gray-100 bg-white rounded-b-xl flex justify-end shrink-0">
                <button onclick="closeModal()" class="px-4 py-2 bg-gray-100 text-gray-700 font-bold rounded-lg hover:bg-gray-200">Fechar</button>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();
        const API_URL = '/api';

        document.addEventListener('DOMContentLoaded', () => { loadPeriods(); });

        // --- MENU MOBILE ---
        function toggleMenu() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobile-overlay');
            const body = document.body;
            
            if (!sidebar || !overlay) return;

            if (sidebar.classList.contains('-translate-x-full')) {
                sidebar.classList.remove('-translate-x-full');
                overlay.classList.remove('hidden');
                setTimeout(() => overlay.classList.remove('opacity-0'), 10);
                if(window.innerWidth < 768) body.style.overflow = 'hidden';
            } else {
                sidebar.classList.add('-translate-x-full');
                overlay.classList.add('opacity-0');
                setTimeout(() => overlay.classList.add('hidden'), 300);
                body.style.overflow = '';
            }
        }

        // --- CARGA DE PERIODOS ---
        async function loadPeriods() {
            try {
                const res = await fetch(`${API_URL}/periods`);
                if(res.status === 401) window.location.href = '/';
                const periods = await res.json();
                
                const sel = document.getElementById('period-selector');
                sel.innerHTML = '';
                if(periods.length === 0) {
                    sel.innerHTML = '<option>Sem contratos</option>';
                    return;
                }
                
                periods.forEach((p, idx) => {
                    const opt = document.createElement('option');
                    opt.value = JSON.stringify({ start: p.DataInicio__c, end: p.DataFim__c });
                    opt.text = p.Name;
                    if(idx === 0) opt.selected = true;
                    sel.appendChild(opt);
                });
                sel.onchange = (e) => triggerDataLoad(e.target.value);
                if (sel.options.length > 0) triggerDataLoad(sel.value);
            } catch (err) { console.error(err); }
        }

        function triggerDataLoad(jsonDates) {
            if(!jsonDates) return;
            const dates = JSON.parse(jsonDates);
            loadTableData(dates.start, dates.end);
        }

        async function loadTableData(start, end) {
            const tbody = document.getElementById('hr-table-body');
            tbody.innerHTML = '<tr><td colspan="5" class="text-center py-10"><div class="animate-pulse text-blue-600 font-bold">Carregando dados...</div></td></tr>';
            try {
                const res = await fetch(`${API_URL}/hr/employees?inicio=${start}&fim=${end}`);
                const response = await res.json();
                
                // KPIs
                if(response.kpis) {
                    document.getElementById('kpi-total').innerText = response.kpis.total || 0;
                    document.getElementById('kpi-burnout').innerText = response.kpis.burnout || 0;
                    document.getElementById('kpi-ociosos').innerText = response.kpis.ociosos || 0;
                }

                const data = response.data;
                tbody.innerHTML = '';
                if (!data || data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="5" class="text-center py-10 text-gray-400">Nenhum dado encontrado.</td></tr>';
                    return;
                }

                data.forEach(person => {
                    const percent = person.contract > 0 ? (person.total / person.contract) * 100 : 0;
                    const projectCount = person.projects.length;
                    let projectCountClass = projectCount > 3 ? "bg-orange-50 text-orange-700 border-orange-100" : "bg-blue-50 text-blue-700 border-blue-100";
                    
                    // STATUS UI
                    let statusLabelClass = '';
                    let statusIcon = '';
                    switch (person.statusUI) {
                        case 'Aguardando Aprovação':
                            statusLabelClass = 'bg-yellow-100 text-yellow-800 border-yellow-200';
                            statusIcon = '<i data-lucide="clock" class="w-3 h-3"></i>';
                            break;
                        case 'Pronto para Fechamento':
                            statusLabelClass = 'bg-green-100 text-green-800 border-green-200 font-bold';
                            statusIcon = '<i data-lucide="check-circle" class="w-3 h-3"></i>';
                            break;
                        case 'Aguardando Faturamento':
                            statusLabelClass = 'bg-purple-100 text-purple-800 border-purple-200';
                            statusIcon = '<i data-lucide="lock" class="w-3 h-3"></i>';
                            break;
                        case 'Faturado':
                            statusLabelClass = 'bg-blue-100 text-blue-800 border-blue-200 font-bold';
                            statusIcon = '<i data-lucide="dollar-sign" class="w-3 h-3"></i>';
                            break;
                        default:
                            statusLabelClass = 'bg-gray-100 text-gray-600 border-gray-200';
                            statusIcon = '<i data-lucide="help-circle" class="w-3 h-3"></i>';
                    }
                    const statusBadge = `<span class="inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs border ${statusLabelClass}">${statusIcon} ${person.statusUI}</span>`;

                    // PROGRESS BAR
                    let progressColor;
                    if (person.status === 'danger') progressColor = 'bg-red-500';
                    else if (person.status === 'risk') progressColor = 'bg-yellow-500';
                    else if (person.status === 'under') progressColor = 'bg-gray-400';
                    else progressColor = 'bg-green-500';

                    // ACTION BUTTONS
                    const projectsStr = person.projects.join(',');
                    let actionHtml = '';
                    
                    if (person.canAction) {
                        actionHtml = `
                            <div class="flex items-center justify-end gap-2">
                                <button onclick="openModal('${person.id}', '${person.name}', ${person.total}, ${person.contract}, '${projectsStr}')" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Ver Detalhes"><i data-lucide="eye" class="w-4 h-4"></i></button>
                                <button onclick="performAction('${person.id}', '${person.name}', 'reject')" class="px-3 py-1.5 bg-red-100 hover:bg-red-200 text-red-700 text-xs font-bold rounded shadow-sm transition-colors whitespace-nowrap flex items-center gap-1"><i data-lucide="x-circle" class="w-3 h-3"></i> Reprovar</button>
                                <button onclick="performAction('${person.id}', '${person.name}', 'close')" class="px-3 py-1.5 bg-purple-600 hover:bg-purple-700 text-white text-xs font-bold rounded shadow-sm transition-colors whitespace-nowrap flex items-center gap-1"><i data-lucide="check-square" class="w-3 h-3"></i> Fechar</button>
                            </div>`;
                    } else {
                        actionHtml = `
                            <div class="flex items-center justify-end gap-2">
                                <button onclick="openModal('${person.id}', '${person.name}', ${person.total}, ${person.contract}, '${projectsStr}')" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Ver Detalhes"><i data-lucide="eye" class="w-4 h-4"></i></button>
                            </div>`;
                    }

                    const row = `
                    <tr class="hover:bg-gray-50 transition-colors group">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-600 border border-gray-200">${person.name.charAt(0)}</div>
                                <div><p class="font-bold text-gray-900">${person.name}</p><p class="text-xs text-gray-400">${person.role}</p></div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="inline-flex items-center justify-center px-3 py-1 rounded-full text-xs font-bold border ${projectCountClass}">${projectCount} Projeto${projectCount !== 1 ? 's' : ''}</span>
                        </td>
                        <td class="px-6 py-4 align-middle">
                            <div class="flex justify-between text-xs font-bold mb-1"><span class="text-gray-700">${person.total.toFixed(1)}h</span><span class="text-gray-400">Meta: ${person.contract}h</span></div>
                            <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden"><div class="${progressColor} h-2 rounded-full" style="width: ${Math.min(percent, 100)}%"></div></div>
                        </td>
                        <td class="px-6 py-4 text-center">${statusBadge}</td>
                        <td class="px-6 py-4 text-right">${actionHtml}</td>
                    </tr>`;
                    tbody.innerHTML += row;
                });
                lucide.createIcons();
            } catch (err) {
                console.error(err);
                tbody.innerHTML = '<tr><td colspan="5" class="text-center py-10 text-red-500">Erro ao carregar dados.</td></tr>';
            }
        }

        // --- FILTRO ---
        function filterTable() {
            const input = document.getElementById("search-input");
            const filter = input.value.toUpperCase();
            const table = document.getElementById("hr-table-body");
            const tr = table.getElementsByTagName("tr");
            for (let i = 0; i < tr.length; i++) {
                const td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    const txtValue = td.textContent || td.innerText;
                    tr[i].style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? "" : "none";
                }       
            }
        }

        // --- OPEN MODAL (CORRIGIDO PARA O CABEÇALHO PRETO) ---
        async function openModal(id, name, total, contract, projectsStr) {
            const modal = document.getElementById('logs-modal');
            const tbody = document.getElementById('modal-logs-body');
            
            // 1. Setup Inicial do Modal (Reset)
            document.getElementById('modal-name').innerText = name;
            
            // Define Meta (Valor Estático vindo da tabela)
            document.getElementById('modal-contract').innerText = contract.toFixed(1) + 'h';
            
            // Valores temporários até carregar
            document.getElementById('modal-total').innerText = '...';
            document.getElementById('modal-saldo').innerText = '...';
            document.getElementById('modal-saldo').className = "block text-3xl font-bold text-gray-500";
            document.getElementById('modal-composition').innerHTML = '<span class="text-gray-500 italic text-xs">Carregando composição...</span>';
            
            tbody.innerHTML = '<tr><td colspan="4" class="text-center py-6 text-gray-500">Buscando detalhes...</td></tr>';
            
            // Exibir Modal
            modal.classList.remove('hidden');
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                modal.querySelector('div').classList.remove('scale-95');
            }, 10);

            const sel = document.getElementById('period-selector');
            const dates = JSON.parse(sel.value);

            try {
                const res = await fetch(`${API_URL}/hr/employees/${id}/details?inicio=${dates.start}&fim=${dates.end}`);
                const responseData = await res.json();
                
                const logs = responseData.logs || responseData; 
                const summary = responseData.summary || null;

                // 2. HEADER: PREENCHER COM DADOS REAIS
                if (summary) {
                    // Realizado (Fiel do Período)
                    document.getElementById('modal-total').innerText = summary.totalRealizado.toFixed(1) + 'h';
                    
                    // Saldo (Realizado - Meta)
                    const contractVal = parseFloat(document.getElementById('modal-contract').innerText);
                    const diff = summary.totalRealizado - contractVal;
                    
                    const saldoEl = document.getElementById('modal-saldo');
                    saldoEl.innerText = (diff > 0 ? '+' : '') + diff.toFixed(1) + 'h';
                    
                    // Cores do Saldo
                    if (diff > 20) saldoEl.className = "block text-3xl font-bold text-red-400"; // Crítico
                    else if (diff > 0) saldoEl.className = "block text-3xl font-bold text-blue-400"; // Positivo (Azul C3C)
                    else if (diff < 0) saldoEl.className = "block text-3xl font-bold text-yellow-400"; // Negativo
                    else saldoEl.className = "block text-3xl font-bold text-gray-500"; // Zerado

                    // Composição Detalhada
                    const compEl = document.getElementById('modal-composition');
                    let htmlComp = ``;

                    if (summary.normal > 0) {
                        htmlComp += `
                            <div class="flex items-baseline gap-1.5">
                                <span class="w-2 h-2 rounded-full bg-gray-400"></span>
                                <span class="text-gray-400 text-xs uppercase font-bold">Normal:</span>
                                <span class="text-white font-mono font-bold">${summary.normal.toFixed(1)}h</span>
                            </div>`;
                    }
                    if (summary.banco > 0) {
                        htmlComp += `
                            <div class="flex items-baseline gap-1.5 border-l border-gray-700 pl-4">
                                <span class="w-2 h-2 rounded-full bg-indigo-400"></span>
                                <span class="text-indigo-300 text-xs uppercase font-bold">Banco:</span>
                                <span class="text-indigo-100 font-mono font-bold">${summary.banco.toFixed(1)}h</span>
                            </div>`;
                    }
                    if (summary.extra > 0) {
                        htmlComp += `
                            <div class="flex items-baseline gap-1.5 border-l border-gray-700 pl-4">
                                <span class="w-2 h-2 rounded-full bg-red-500"></span>
                                <span class="text-red-400 text-xs uppercase font-bold">Extra:</span>
                                <div class="flex items-center gap-1 bg-red-900/50 px-2 py-0.5 rounded border border-red-800">
                                    <span class="text-white font-mono font-bold">${summary.extra.toFixed(1)}h</span>
                                    <span class="text-[10px] text-red-400 font-bold">x2</span>
                                    <span class="text-white font-mono font-bold">= ${(summary.extra * 2).toFixed(1)}h</span>
                                </div>
                            </div>`;
                    }
                    if (summary.ferias > 0) {
                        htmlComp += `
                            <div class="flex items-baseline gap-1.5 border-l border-gray-700 pl-4">
                                <span class="w-2 h-2 rounded-full bg-green-400"></span>
                                <span class="text-green-400 text-xs uppercase font-bold">Férias:</span>
                                <span class="text-white font-mono font-bold">${summary.ferias.toFixed(1)}h</span>
                            </div>`;
                    }
                    if (summary.licenca > 0) {
                        htmlComp += `
                            <div class="flex items-baseline gap-1.5 border-l border-gray-700 pl-4">
                                <span class="w-2 h-2 rounded-full bg-purple-400"></span>
                                <span class="text-purple-400 text-xs uppercase font-bold">Licença:</span>
                                <span class="text-white font-mono font-bold">${summary.licenca.toFixed(1)}h</span>
                            </div>`;
                    }
                    compEl.innerHTML = htmlComp || '<span class="text-gray-500 italic text-xs">Sem registros totalizados.</span>';
                }

                // 3. TABELA DE DETALHES
                tbody.innerHTML = '';
                if(logs.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" class="text-center py-6 text-gray-400">Sem lançamentos detalhados.</td></tr>';
                    return;
                }

                // views/hr_dashboard.ejs (Dentro de openModal)

logs.forEach(log => {
    let iconHtml = '';
    let rowClass = 'hover:bg-gray-50';
    let activityClass = 'text-gray-800 font-bold';

    // --- DEFINIÇÃO DE ÍCONES E CORES ---
    if (log.category === 'ferias') {
        iconHtml = '<span class="inline-flex items-center gap-1 bg-green-100 text-green-700 text-[10px] px-2 py-0.5 rounded-full font-bold uppercase"><i data-lucide="palmtree" class="w-3 h-3"></i> Férias</span>';
        rowClass = 'bg-green-50/40 hover:bg-green-50';
    } 
    else if (log.category === 'licenca') {
        iconHtml = '<span class="inline-flex items-center gap-1 bg-purple-100 text-purple-700 text-[10px] px-2 py-0.5 rounded-full font-bold uppercase"><i data-lucide="stethoscope" class="w-3 h-3"></i> Licença</span>';
        rowClass = 'bg-purple-50/40 hover:bg-purple-50';
    } 
    // NOVA CATEGORIA: BANCO (Vindo do Lançamento)
    else if (log.isBanco) {
        iconHtml = '<span class="inline-flex items-center gap-1 bg-indigo-100 text-indigo-700 text-[10px] px-2 py-0.5 rounded-full font-bold uppercase border border-indigo-200"><i data-lucide="clock" class="w-3 h-3"></i> Banco</span>';
        rowClass = 'bg-indigo-50/30 hover:bg-indigo-50';
    }
    else if (log.isExtra) {
        iconHtml = '<span class="inline-flex items-center gap-1 bg-red-50 text-red-600 text-[10px] px-2 py-0.5 rounded-full font-bold uppercase border border-red-100">Extra</span>';
    }

    // --- CÁLCULO VISUAL (Matemática) ---
    let mathHtml = `<span class="text-gray-500 text-xs">${log.rawNormal}h</span>`;
    
    if (log.rawExtra > 0) {
        if (log.isExtra) {
            // É EXTRA MESMO (x2)
            mathHtml = `
                <div class="flex items-center gap-2 text-xs">
                    ${log.rawNormal > 0 ? `<span class="text-gray-400">${log.rawNormal}h +</span>` : ''}
                    <div class="flex items-center bg-red-50 border border-red-100 px-2 py-0.5 rounded text-red-700">
                        <span class="font-bold">${log.rawExtra}h</span><span class="text-[9px] mx-0.5">x</span><span class="font-bold">2</span>
                    </div>
                </div>`;
        } else if (log.isBanco) {
            // É BANCO (x1) - Mostramos diferente para indicar que foi para o banco
            mathHtml = `
                <div class="flex items-center gap-2 text-xs">
                    ${log.rawNormal > 0 ? `<span class="text-gray-400">${log.rawNormal}h +</span>` : ''}
                    <div class="flex items-center bg-indigo-50 border border-indigo-100 px-2 py-0.5 rounded text-indigo-700">
                        <span class="font-bold">${log.rawExtra}h</span><span class="text-[9px] mx-1 font-normal text-indigo-400">(Banco)</span>
                    </div>
                </div>`;
        }
    }

    // Descrição completa (inclui justificativa se houver)
    const fullDesc = log.justification ? `${log.description} • ${log.justification}` : log.description;

    const row = `
    <tr class="${rowClass} border-b border-gray-100 last:border-0 transition-colors">
        <td class="px-6 py-3 align-top">
            <div class="flex flex-col">
                <span class="font-bold text-gray-900 text-sm">${log.date}</span>
                <span class="text-[10px] text-gray-400 uppercase tracking-wide">${log.weekDay || '-'}</span>
            </div>
        </td>
        <td class="px-6 py-3 align-top">
            <div class="flex flex-col gap-1">
                <div class="flex items-center justify-between">
                    <span class="${activityClass} text-xs">${log.project}</span>
                    ${iconHtml}
                </div>
                <p class="text-xs text-gray-500 truncate max-w-[200px]" title="${fullDesc}">${fullDesc}</p>
            </div>
        </td>
        <td class="px-6 py-3 align-middle">${mathHtml}</td>
        <td class="px-6 py-3 align-middle text-right">
            <span class="font-bold text-sm ${log.isExtra ? 'text-red-600' : (log.isBanco ? 'text-indigo-600' : 'text-gray-800')}">
                ${log.totalImpact.toFixed(1)}h
            </span>
        </td>
    </tr>`;
    tbody.innerHTML += row;
});
lucide.createIcons();

            } catch (err) {
                console.error(err);
                tbody.innerHTML = '<tr><td colspan="4" class="text-center text-red-500">Erro ao carregar detalhes.</td></tr>';
            }
        }

        function closeModal() {
            const modal = document.getElementById('logs-modal');
            modal.classList.add('opacity-0');
            modal.querySelector('div').classList.add('scale-95');
            setTimeout(() => { modal.classList.add('hidden'); }, 300);
        }

        async function performAction(personId, personName, actionType) {
            const actionVerb = actionType === 'close' ? 'FECHAR' : 'REPROVAR';
            const actionMsg = actionType === 'close' ? 'bloqueará edições' : 'devolverá para o gestor';
            const confirmed = confirm(`ATENÇÃO RH:\n\nVocê vai ${actionVerb} a folha de ${personName}.\nIsso ${actionMsg}.\n\nConfirma?`);
            if(!confirmed) return;

            const selector = document.getElementById('period-selector');
            const dates = JSON.parse(selector.value);
            
            try {
                const res = await fetch(`${API_URL}/hr/action`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        personId, 
                        action: actionType, 
                        inicio: dates.start, 
                        fim: dates.end 
                    })
                });
                const result = await res.json();
                if (result.success) {
                    alert(result.message);
                    triggerDataLoad(selector.value); 
                } else {
                    alert('Erro: ' + result.message);
                }
            } catch (err) {
                console.error(err);
                alert('Erro de comunicação.');
            }
        }
    </script>
